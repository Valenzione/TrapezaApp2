<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="catButtonStyle">@style/category_button</item>
        <item name="dishButtonStyle">@style/dish_button</item>
        <item name="backButtonStyle">@style/back_button</item>
    </style>


    <style name="category_button" parent="grid_layout_item">
    </style>

    <style name="dish_button" parent="grid_layout_item">
    </style>

    <style name="back_button" parent="grid_layout_item">
    </style>

    <style name="grid_layout_item" parent="android:style/Widget.Material.Button">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:width">176dp</item>
        <item name="android:height">176dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>


