<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/pay_check_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:src="@android:drawable/btn_dialog"
        android:background="@null"
        android:layout_weight="0.03" />

    <TextView
        android:id="@+id/pay_check_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_weight="2"
        android:text="Keka" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 \u20BD"
        android:id="@+id/textView2"
        android:layout_weight="0.03" />

    <ImageButton
        android:id="@+id/pay_check_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:src="@drawable/ic_remove"
        android:background="@null"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/pay_check_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pay_check_item_remove"
        android:inputType="number"
        android:layout_weight="0.03" />

    <ImageButton
        android:id="@+id/pay_check_item_add"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/pay_check_item_number"
        android:src="@drawable/ic_add"
        android:background="@null"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 \u20BD"
        android:id="@+id/textView"
        android:layout_weight="0.03" />
</LinearLayout>
